<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qinchy.seatademo.account.dao.mapper.AccountMapper">

    <select id="getByUserId" parameterType="string" resultType="com.qinchy.seatademo.account.dao.dataobject.AccountDO">
        SELECT *
        FROM account_tbl
        WHERE user_id = #{value}
    </select>

    <select id="getById" parameterType="long" resultType="com.qinchy.seatademo.account.dao.dataobject.AccountDO">
        SELECT *
        FROM account_tbl
        WHERE id = #{value}
    </select>

    <insert id="insert" parameterType="com.qinchy.seatademo.account.dao.dataobject.AccountDO">
        INSERT INTO account_tbl(user_id, money) VALUES (#{userId}, #{money})
        <selectKey resultType="java.lang.Long" keyProperty="id">
            SELECT LAST_INSERT_ID() AS ID
        </selectKey>
    </insert>
</mapper>